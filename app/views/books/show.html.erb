<div class="container">
  <div class="row">
    <div class="col-11">
      <table class='table table-hover'>
        <tr>
          <th>Name</th>
          <td><%= @book.name %></td>
        </tr>
        <tr>
          <th>Description</th>
          <td><%= @book.description %></td>
        </tr>
        <tr>
          <th>Chapters</th>
          <td><%= render @book.chapters %></td>
        </tr>
        <tr>
          <th>Progress</th>
          <td>
            <%= render partial: 'progress', locals: { book: @book} %>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-1">
      <%= link_to edit_book_url(@book) do %>
        <%= fa_icon 'edit', class: 'text-primary', style: 'font-size: 20px' %>
      <% end %>
      <%= link_to book_url(@book), method: :delete, data: {confirm: "Are you sure?"}, style: 'font-size: 20px'  do %>
        <%= fa_icon 'trash', class: 'text-danger' %>
      <% end %>
    </div>
  </div>
  <div class='row'>
    <div class='offset-8 col-3'>
      <%= link_to "Add new chapter", new_book_chapter_url(@book), class: 'btn btn-block btn-primary' %>
    </div>
  </div>
</div>