<table class='table table-hover table-bordered'>
  <tr>
    <th>Order</th>
    <th>Name</th>
  </tr>
  <% priorities.each do |priority, books| %>
    <tr>
      <th rowspan="<%= books.length + 1 %>">
        <%= priority %>
      </th>
    </tr>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to book.name, book %>        
        </td>
      </tr>
    <% end %>
  <% end %>
</table>